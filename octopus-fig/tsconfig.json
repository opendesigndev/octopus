{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "rootDir": "./",
    "outDir": "./lib/",
    "module": "CommonJS",
    "target": "ES2019",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["es2019", "ES2015.Proxy", "dom", "ES2021.String"],
    "paths": {}
  },
  "include": ["src", "test", "examples/node"]
}
