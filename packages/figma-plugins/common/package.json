{
  "name": "@opendesign/figma-plugin-common",
  "version": "3.0.0-rc.5",
  "description": "Figma Plugin Common Library",
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf ./node_modules ./dist",
    "lint": "echo 'Linting is not implemented yet'",
    "test": "echo 'Tests are not implemented yet'",
    "tsc": "tsc --noEmit -p src/main",
    "tsc:watch": "yarn tsc:main -- --watch --preserveWatchOutput",
    "build": "rimraf ./dist && yarn build:ui && yarn build:main",
    "build:main": "esbuild src/main/* --outdir=dist/main",
    "build:ui": "esbuild src/ui/* --outdir=dist/ui"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "1.54.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "esbuild": "0.15.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "4.8.4"
  },
  "files": [
    "dist"
  ]
}
