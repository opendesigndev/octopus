{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2019",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["es2019", "ES2015.Proxy", "dom"]
  },
  "include": ["src", "test", "examples/node"]
}
