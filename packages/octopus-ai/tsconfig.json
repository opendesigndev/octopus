{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "rootDir": "./",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2019",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "lib": ["es2019", "ES2015.Proxy", "dom"],
  },
  "ts-node": {
    "esm": true
},
  "include": ["src", "test", "examples"]
}
