{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist/",
    "module": "CommonJS",
    "target": "ES2019",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["es2019", "ES2015.Proxy", "dom"]
  },

  "include": ["src/**/*", "test/**/*"]
}
