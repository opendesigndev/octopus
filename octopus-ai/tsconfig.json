{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "rootDir": "./",
    "outDir": "./lib/",
    "module": "CommonJS",
    "target": "ES2019",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "lib": ["es2019", "ES2015.Proxy", "dom"]
  },
  "include": ["src/**/*", "test/**/*", "scripts"]
}
