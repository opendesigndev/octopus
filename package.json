{
  "private": true,
  "version": "3.0.0",
  "license": "Apache-2.0",
  "workspaces": {
    "packages": [
      "packages/figma-parser",
      "packages/figma-parser-s3-plugin",
      "packages/figma-plugin-squid",
      "packages/octopus-common",
      "packages/octopus-ai",
      "packages/octopus-fig",
      "packages/octopus-psd",
      "packages/octopus-xd"
    ],
    "nohoist": [
      "**"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "rimraf ./node_modules && yarn workspaces run clean",
    "clean-init": "yarn clean && yarn && yarn build",
    "test": "yarn workspaces run test",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint . --ext .ts --max-warnings=0",
    "lint:prettier": "prettier -c .",
    "types:check": "yarn workspaces run types:check",
    "verify": "yarn lint && yarn build && yarn test"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opendesigndev/octopus.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
